    Layout = null;

}
<link rel="stylesheet" href="../css/styleBienvenida.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" referrerpolicy="no-referrer" />
<link href="https://fonts.googleapis.com/css2?family=Carattere&display=swap" rel="stylesheet">

<header class=" p-0 bg-dark text-white">

    <nav class="navbar-fixed-top" id="navbar" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-brand ml-2" href="#">
                <img src="https://sanpedro.edu.pe/wp-content/uploads/2019/09/sp-logo.png" style="width: 40px; height: 45px;" alt="Colegio San Pedro">
                <span id="text-academica">Colegio San Pedro</span>
            </a>

        </div>
    </nav>
</header>
<br />


<section class="container">
    <div class="fusion-text fusion-text-2">

        <div class="fusion-text fusion-text-1">
            <h1 style="text-align: center; --fontSize:34; line-height: 1.4;" data-fontsize="34" data-lineheight="47.6px" class="fusion-responsive-typography-calculated"><span>CONTACTO</span> <em class="fas fa-phone"></em></h1>
        </div><br />

        <div class="container pb-5">
            <div class="row">
                
                <div class="col-sm-6 bg-white p-2">
                    <h2>DATOS DE CONTACTO</h2>
                    <ul>
                        <li>Razón Social: </li>
                        <li>Dirección: </li>
                        <li>Celular: </li>
                        <li>email: </li>
                    </ul>


                    <h2 class="mt-3">FORMULARIO</h2>
                    

                    <form action="" method="post">
                        
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre"
                                   required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com"
                                   required>
                        </div>

                        <div class="form-group">
                            <label for="subject">Asunto</label>
                            <input type="text" class="form-control" name="subject" id="subject" placeholder="Asunto"
                                    required>
                        </div>

                        <div class="form-group">
                            <label for="mensaje">Mensaje</label>
                            <textarea class="form-control" name="mensaje" id="mensaje" rows="3"></textarea>
                        </div>
                        <input type="submit" class="btn btn-danger" name="btnenviar" value="ENVIAR MENSAJE">

                    </form>
                </div>
                <div class="col-sm-6 p-2">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3937.415737226203!2d-76.00239468539034!3d-9.29638079333567!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91a6418f1fd4c8f1%3A0x27e96d2f9c6a1470!2sColegio%20de%20Ciencias%20-%20TINGO%20MAR%C3%8DA!5e0!3m2!1ses-419!2spe!4v1632780841366!5m2!1ses-419!2spe" title="Navigation Map" width="100%" height="70%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
        
    </div>

</section><br /><br />  



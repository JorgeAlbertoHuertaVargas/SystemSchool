@model IEnumerable<Entities.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <caption> Usuarios </caption>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Pass)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUser">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdUser">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdUser">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
